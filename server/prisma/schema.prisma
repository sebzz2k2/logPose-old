generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid()) @map("uuid")
  email     String    @unique
  name      String?
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime
  monitors  Monitor[]
}

model Monitor {
  id            String          @id @default(uuid()) @map("uuid")
  name          String
  url           String
  interval      Int
  createdAt     DateTime        @default(now())
  updatedAt     DateTime
  owner         User            @relation(fields: [ownerId], references: [id])
  ownerId       String
  MonitorStatus MonitorStatus[]
}

model MonitorStatus {
  id        String   @id @default(uuid()) @map("uuid")
  status    Boolean
  lastCheck DateTime
  monitor   Monitor  @relation(fields: [monitorId], references: [id])
  monitorId String
}
