generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime
  monitors  Monitor[]
}

model Monitor {
  id            Int             @id @default(autoincrement())
  name          String
  url           String
  interval      Int
  createdAt     DateTime        @default(now())
  updatedAt     DateTime
  owner         User            @relation(fields: [ownerId], references: [id])
  ownerId       Int
  MonitorStatus MonitorStatus[]
}

model MonitorStatus {
  id        Int      @id @default(autoincrement())
  status    Boolean
  lastCheck DateTime
  monitor   Monitor  @relation(fields: [monitorId], references: [id])
  monitorId Int
}
